class program {

	void separador() {
    	if(nextToABeeper) {
        	pickbeeper();
            separador();
            move();
        } else {
        	move();
            iterate(3) turnleft();
        }
    }

    program () {
    	pickbeeper();
    	separador();
        while(!nextToABeeper) move();
        turnleft();
        turnoff();
    }
}